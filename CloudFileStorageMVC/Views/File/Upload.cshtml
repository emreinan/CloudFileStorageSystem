@model FileRequestModel
@{
    ViewData["Title"] = "Upload File";
}

<div class="container mt-4">
    <h2 class="mb-4">Upload a File</h2>
    <form asp-action="Upload" enctype="multipart/form-data" method="post">
        <div class="mb-3">
            <label for="file" class="form-label">File</label>
            <input type="file" class="form-control" name="file" required />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Permission</label>
            <div>
                <input type="radio" asp-for="Permission" value="Public" class="form-check-input"/>
                <label asp-for="Permission" class="form-check-label">Public</label>
            </div>
            <div>
                <input type="radio" asp-for="Permission" value="Private" class="form-check-input" />
                <label asp-for="Permission" class="form-check-label">Private</label>
            </div>
            <span asp-validation-for="Permission" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Upload</button>
        <a asp-action="Files" class="btn btn-secondary">Cancel</a>
    </form>
</div>
