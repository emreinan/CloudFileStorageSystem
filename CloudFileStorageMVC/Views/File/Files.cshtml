@model List<FileViewModel>
@{
    ViewData["Title"] = "Files";
}

<div class="container mt-4">
    <h2 class="mb-4">Your Files</h2>
    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Upload" class="btn btn-primary">Add File</a>
    </div>

    @if (Model.Count != 0)
    {
        <table class="table table-striped">
            <thead class="table">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Permission</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var file in Model)
                {
                    <tr>
                        <td>@file.Name</td>
                        <td>@file.Description</td>
                        <td>@file.Permission</td>
                        <td>
                            <a asp-action="GetFile" asp-route-fileName="@file.Name" class="btn btn-primary btn-sm">
                                <i class="fas fa-download"></i> Download
                            </a>
                            <a asp-action="Edit" asp-route-id="@file.Id" class="btn btn-warning btn-sm">Edit</a>
                            <form asp-action="Delete" asp-route-id="@file.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this experience?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No files available. Please upload a file.</p>
    }

</div>
